      <div></div>
      <div></div>
      <div></div>
      <div></div>
      <div></div>
      <div></div>
      <div></div>
      <div></div>
    </div>
    <div id="enchantments">
      Enchantment
    </div>
    <div id="artifacts">
      Artifact
    </div>
    <div id="land">
      Lands
    </div>
  </div>
  <div class="medium-9 columns" id="bottom-bar">
    <div id="hand">
      Hand
    </div>
  </div>
</div>
