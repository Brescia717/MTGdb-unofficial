      <div id="library">
        [ Library ]
      </div>
      <div id="graveyard">
        [ Graveyard ]
      </div>
      <div id="exile">
        [ Exile ]
      </div>
    </div>
    <div id="counters">
      <div id="life">
        Life: [ 20/20 ]
      </div>
      <div id="poison">
        Poison: [ 0 ]
      </div>
      <div id="mana-pool">
        <div id="green">[ G ]</div>
        <div id="white">[ W ]</div>
        <div id="blue">[ U ]</div>
        <div id="black">[ B ]</div>
        <div id="red">[ R ]</div>
        <div id="colorless">[ X ]</div>
      </div>
    </div>
  </div>
  <div id="in-play-bar" class="medium-1 columns">
    <div id="play">
      Instant
      Sorcery
    </div>
  </div>
