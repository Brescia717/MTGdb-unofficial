<div class="deck-show">
  <div id="deck-show-header">
    <p>
      <strong>Deck name: </strong><%= @deck.name %> -
      <strong>Created by: </strong><%= @deck.user_tag %>
    </p>
    <p><strong>Format: </strong><%= @deck.mtg_format %></p>
    <% if @deck.user == current_user %>
      <%= link_to "Edit deck", edit_deck_path(@deck), class: "button tiny" %>
    <% end %>
    <hr>
  </div>
  <div class="new-game">
    <% if current_user %>
      <%= link_to "Test deck", new_game_path, class: "button tiny" %>
    <% end %>
  </div>
  <div id="draw-hand">
    <%= form_tag(draw_hand_path, method: "get") do %>
      <%= submit_tag "Draw hand", name: :draw_hand, class: "button tiny" %>
    <% end %>
    <% if @draw_hand %>
      <p><strong><%= "Hand: #{@draw_hand.count} cards" %></strong></p>
      <% @draw_hand.each do |c| %>
        <%= image_tag("http://gatherer.wizards.com/Handlers/Image.ashx?multiverseid=#{c[:card][:multiverseid]}&type=card", alt: "#{c[:card][:multiverseid]}", height: "12.5%", width: "12.5%", id: "draw-hand-images") %>
      <% end %>
      <hr />
    <% end %>
  </div>
  <br />
  <div id="deck-show-library">
    <p>
      <strong><%= "Library: #{@deck.library.count} cards" %></strong><br>
      <% if @deck.library.empty? %>
        No cards found.
      <% else %>
        <% @card_data.each do |card| %>
            <%= image_tag("http://gatherer.wizards.com/Handlers/Image.ashx?multiverseid=#{card[:multiverseid]}&type=card", alt: "#{card[:multiverseid]}") %>
        <% end %>
      <% end %>
    </p>
    <br />
  </div>
  <div id="delete-button">
    <% if @deck.user == current_user %>
      <%= link_to "Delete deck", deck_path(@deck), method: :delete,
          data: {confirm: "Are you sure you want to delete this deck?"},
          class: "button tiny" %>
    <% end %>
  </div>
  <div class="comments">
    <h3>Comments</h3>

    <%= render 'comments/comments' %>
    <%= render 'comments/form' %>
  </div>
</div>
